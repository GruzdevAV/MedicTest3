<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="base_button">
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="btn_chip" parent="base_button">
        <item name="android:background">@drawable/btn_chip</item>
        <item name="android:textColor">@color/btn_chip</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">Популярные</item>
    </style>

    <style name="btn_small" parent="base_button">
        <item name="android:background">@drawable/btn_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Добавить</item>
    </style>
    <style name="btn_small.delete" parent="btn_small">
        <item name="android:background">@drawable/btn_small_delete</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:text">Убрать</item>
    </style>
    <style name="btn_big" parent="base_button">
        <item name="android:background">@drawable/btn_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:text">Подтвердить</item>
    </style>
    <style name="btn_big.secondary" parent="btn_big">
        <item name="android:background">@drawable/btn_big_secondary</item>
        <item name="android:textColor">@color/accent</item>
    </style>
</resources>